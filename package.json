{
  "name": "business-cms",
  "version": "0.0.0",
  "private": true,
  "description": "Business CMS monorepo - Public website and admin dashboard",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:website": "npm run dev --workspace=apps/website",
    "dev:admin": "npm run dev --workspace=apps/admin",
    "build:website": "npm run build --workspace=apps/website",
    "build:admin": "npm run build --workspace=apps/admin",
    "lint:website": "npm run lint --workspace=apps/website",
    "lint:admin": "npm run lint --workspace=apps/admin",
    "db:backup": "node scripts/backup-db.js",
    "db:generate": "cd packages/database && npx prisma generate",
    "db:push": "cd packages/database && npx prisma db push"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
